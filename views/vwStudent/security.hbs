{{#section 'css'}}
<link rel="stylesheet" href="../../public/CSS/vwStudent/profile.css">
{{/section}}

{{#section 'js'}}
<script>
  $('#formChangePassword').on('submit', function (e) {
    e.preventDefault()

    const pass = $('#txtPass').val()
    const newPass = $('#txtNewPass').val()
    const newPassConfirm = $('#txtNewPassConfirm').val()
    if (pass.length === 0) {
      alert('Please fill in current password')
      return
    }
    else if (newPass.length === 0) {
      alert('Please fill in new password')
      return
    }
    else if (newPassConfirm.length === 0) {
      alert('Please fill in new password confirm')
      return
    }
    else if (newPass != newPassConfirm) {
      alert('New password and new password confirm is different')
      return
    }

    $('#formChangePassword').off('submit').submit();
  })
</script>
{{/section}}

<div class="profile">
  <div class="row">
    <div class="col-sm-3">
      <div class="card">
        <h4 class="card-header profile-item student-name">
          {{this.name}}
        </h4>
        <ul class="list-group list-group-flush">
          <a href="/student/profile" class="profile-item">
            <li class="list-group-item">Profile</li>
          </a>
          <a href="/student/security" class="profile-item">
            <li class="list-group-item active-menu">Security</li>
          </a>
          <a href="/student/watchlist" class="profile-item">
            <li class="list-group-item">Watchlist</li>
          </a>
          <a href="/student/my-courses" class="profile-item">
            <li class="list-group-item">All courses</li>
          </a>
        </ul>
      </div>
    </div>

    <div class="col-sm-9 pb-4">
      <p class="title">Security</p>
      {{!-- <p>Change your password here</p> --}}

      <form class="profile-form" method="post" id="formChangePassword">
        {{#if msg}}
        <div class="alert alert-success text-center" role="alert">
          {{msg}}
        </div>
        {{/if}}
        {{#if err_msg}}
        <div class="alert alert-danger text-center" role="alert">
          {{err_msg}}
        </div>
        {{/if}}
        <div class="form-group">
          <label for="txtPass">Current password</label>
          <input name="pass" type="password" class="form-control" id="txtPass">
        </div>
        <div class="form-group">
          <label for="txtNewPass">New password</label>
          <input name="newPass" type="password" class="form-control" id="txtNewPass">
        </div>
        <div class="form-group">
          <label for="txtNewPass">New password confirm</label>
          <input type="password" class="form-control" id="txtNewPassConfirm">
        </div>

        <div class="submit-button">
          <button type="submit" class="btn btn-profile">Change password</button>
        </div>
      </form>
    </div>
  </div>
</div>
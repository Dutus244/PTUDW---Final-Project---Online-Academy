{{#section 'css'}}
    <link rel="stylesheet" href="/public/CSS/styleAdmin.css">
{{/section}}

<div class="card">
    <h4 class="card-header d-flex justify-content-between">
        <span><h3>Students</h3></span>
    </h4>
    {{#if this.empty}}
        <div class="card-body">
            <h5 class="card-title">
                Không có học sinh nào!
            </h5>
        </div>
    {{else}}
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Email</th>
                    <th>Student Name</th>
                    <th>Number of courses enrolls in</th>
                    <th>Number of courses like</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {{#each this.students}}
                    <tr>
                        <td>{{studentid}}</td>
                        <td>{{email}}</td>
                        <td>{{studentname}}</td>
                        <td>{{amount}}</td>
                        <td>{{}}</td>
                        <td class="text-right">
                            <a class="btn btn-sm btn-outline-primary btnAddAdmin" href="/admin/students/edit?id={{lecid}}" role="button" title="Edit">
                            <i class="bi bi-pencil-square bg-transparent" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    {{/if}}
    <div class="card-footer text-muted">

    </div>
</div>